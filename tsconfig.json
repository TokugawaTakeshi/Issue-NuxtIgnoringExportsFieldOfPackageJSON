{
  "compilerOptions": {

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "~/*": [ "./*" ],
      "@/*": [ "./*" ]
    },
    "types": [
      "@nuxt/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
